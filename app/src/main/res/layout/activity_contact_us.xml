<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_contactUs"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/contact_bg"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACT DEVELOPER"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"/>

        <EditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:id="@+id/login_email"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="40dp"
            android:padding="8dp"
            android:hint="Email"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:id="@+id/edit_query"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="40dp"
            android:padding="8dp"
            android:hint="Query"
            android:drawableLeft="@drawable/baseline_question_answer_24"
            android:drawablePadding="8dp"
            android:textColor="@color/black"/>

        <Button
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:text="Send Query"
            android:id="@+id/query_btn"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#BA2F5E"
            android:textColor="@color/black"
            app:cornerRadius="20dp"
            />

        <TextView
            android:id="@+id/call_redirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_call_24"
            android:padding="8dp"
            android:text="Call us - 9769037682"
            android:textColor="@color/black"
            android:textSize="15dp" />


</LinearLayout>